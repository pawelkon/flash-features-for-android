<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="15px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15px">

            <TextView
                android:id="@+id/lbl_static_cameramanager_current_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="current mode from CameraManager instance: " />

            <TextView
                android:id="@+id/lbl_modable_cameramanager_current_mode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15px">

            <TextView
                android:id="@+id/lbl_static_flashapi23_current_mode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="current mode from FlashAPI23 instance: " />

            <TextView
                android:id="@+id/lbl_modable_flashapi23_current_mode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_turn_on"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15px"
            android:text="TURN ON" />

        <Button
            android:id="@+id/btn_turn_off"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15px"
            android:text="TURN OFF" />

        <Button
            android:id="@+id/btn_update_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15px"
            android:text="UPDATE MODE" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>